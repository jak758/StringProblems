//Find number of occurance of a given character in a string.
//inputString= Hello World
//l=3

using System;
public class Program
{
	public static void Main()
	{
		string str = "Hello World";
		char ch =  'o';
		int count = 0;
		//using for loop
		for(int i=0; i < str.Length; i++)
		{
			if(str[i] == ch)
				count++;
		}
    //using foreach loop
    //foreach (char c in str)
    //{
    //  if (c == ch)
    //      count++;  
    //}
		Console.WriteLine($"The character '{ch}' occurs {count} times in the string '{str}'.");
	}
}
